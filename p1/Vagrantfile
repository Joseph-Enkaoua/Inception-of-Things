Vagrant.configure("2") do |config|
  config.vm.box = "generic/alpine318"

  config.vm.provider "virtualbox" do |virtualbox|
    virtualbox.memory = 1024
    virtualbox.cpus = 1
  end

  config.vm.define "henkaouaS" do |server|
    server.vm.hostname = "henkaouaS"
    server.vm.synced_folder ".", "/vagrant"
    server.vm.network "private_network", ip: "192.168.56.110"

    server.vm.provision "shell", privileged: true, inline: <<-SHELL
      apk add curl
      curl -sfL https://get.k3s.io | INSTALL_K3S_EXEC="--write-kubeconfig-mode=644 --node-ip 192.168.56.110 --bind-address=192.168.56.110" sh -s -
      sleep 10
      cp /var/lib/rancher/k3s/server/node-token /vagrant/.
    SHELL
  end

  config.vm.define "henkaouaSW" do |worker|
    worker.vm.hostname = "henkaouaSW"
    worker.vm.synced_folder ".", "/vagrant"
    worker.vm.network "private_network", ip: "192.168.56.111"

    worker.vm.provision "shell", privileged: true, inline: <<-SHELL
      apk add curl
      curl -sfL https://get.k3s.io | INSTALL_K3S_EXEC="agent --server https://192.168.56.110:6443 --token-file /vagrant/node-token --node-ip=192.168.56.111" sh -s -
    SHELL
  end
end
